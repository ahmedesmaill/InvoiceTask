@model Data_Access.Models.Invoice

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3>Invoice Details</h3>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <h5><strong>Invoice ID:</strong> @Model.InvoiceId</h5>
                </div>
                <div class="col-md-6 text-end">
                    <h5><strong>Date:</strong> @(Model.Date.HasValue ? Model.Date.Value.ToString("yyyy-MM-dd") : "N/A")</h5>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detail in Model.InvoiceDetails)
                        {
                            <tr>
                                <td>@detail.Product</td>
                                <td class="text-center">@detail.Quantity</td>
                                <td class="text-end">@detail.Price?.ToString("C")</td>
                                <td class="text-end">@(((detail.Quantity ?? 0) * (detail.Price ?? 0)).ToString("C"))</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="row mt-4">
                <div class="col-md-12 text-end">
                    <h4><strong>Total Amount:</strong> @(Model.TotalAmount?.ToString("C") ?? "0.00")</h4>
                </div>
            </div>
        </div>
        <div class="card-footer text-center">
            <a href="@Url.Action("Index", "Invoice")" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
